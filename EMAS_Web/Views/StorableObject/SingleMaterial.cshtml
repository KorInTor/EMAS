@model Model.MaterialPiece
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Model

@*TODO: Hideous trash, rework this. *@
<style>
    .dropdown-menu {
        max-height: 200px;
        / overflow-y: auto;
    }
</style>

<form method="post" class="container mt-4">
    @if (Model != null)
    {
        <input type="hidden" asp-for="Id" value="@(Model.Id)"/>
    }

    <div class="form-group mb-3">
        <label for="Type">Тип</label>
        <div class="dropdown">
            <input type="text" class="form-control dropdown-toggle" id="Type" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" oninput="filterOptions(this)" asp-for="Type">
            <div class="dropdown-menu overflow-auto" aria-labelledby="combobox">
                @foreach (string name in ViewBag.DistinctValues[nameof(MaterialPiece.Type)])
                {
                    <a class="dropdown-item" href="#">@name</a>
                }
            </div>
        </div>
    </div>
    <div class="form-group mb-3">
        <label for="combobox">Марка</label>
        <div class="dropdown">
            <input type="text" class="form-control dropdown-toggle" id="combobox" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" oninput="filterOptions(this)" asp-for="Name">
            <div class="dropdown-menu overflow-auto" aria-labelledby="combobox">
                @foreach (string name in ViewBag.DistinctValues[nameof(MaterialPiece.Name)])
                {
                    <a class="dropdown-item" href="#">@name</a>
                }
            </div>
        </div>
    </div>
    <div class="form-group mb-3">
        <label for="Units">Единицы</label>
        <div class="dropdown">
            <input type="text" class="form-control dropdown-toggle" id="Units" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" oninput="filterOptions(this)" asp-for="Units">
            <div class="dropdown-menu overflow-auto" aria-labelledby="combobox">
                @foreach (string name in ViewBag.DistinctValues[nameof(MaterialPiece.Units)])
                {
                    <a class="dropdown-item" href="#">@name</a>
                }
            </div>
        </div>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Amount">Количество</label>
        <input type="number" class="form-control" asp-for="Amount" />
        <span asp-validation-for="Amount" class="text-danger" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Extras">Доп характеристика</label>
        <input type="text" class="form-control" asp-for="Extras" />
        <span asp-validation-for="Extras" class="text-danger" />
    </div>
    <div class="form-group mb-3">
        <label for="StorageType">Производитель</label>
        <div class="dropdown">
            <input type="text" class="form-control dropdown-toggle" id="StorageType" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" oninput="filterOptions(this)" asp-for="StorageType">
            <div class="dropdown-menu overflow-auto" aria-labelledby="combobox">
                @foreach (string name in ViewBag.DistinctValues[nameof(MaterialPiece.StorageType)])
                {
                    <a class="dropdown-item" href="#">@name</a>
                }
            </div>
        </div>
    </div>
    <div class="form-group mb-3">
        <label asp-for="InventoryNumber">Инвентарный Номер</label>
        <input type="text" class="form-control" asp-for="InventoryNumber" />
        <span asp-validation-for="InventoryNumber" class="text-danger" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Description">Описание</label>
        <input type="text" class="form-control" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger" />
    </div>
    @if (Model != null)
    {
        <div class="form-group mb-3">
            <label for="comment">Опишиет причину обновления данных</label>
            <input type="text" class="form-control" name="comment" />
        </div>
    }
    <div class="form-group mb-3">
        <button type="submit" class="btn btn-success form-control">
            @if (Model != null) // Или другой условие, чтобы определить режим
            {
                <text>Обновить материал</text>
            }
            else
            {
                <text>Создать новый материал</text>
            }
        </button>
    </div>
</form>

@section Scripts
{

    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

    <script>
        function filterOptions(input) {
            const filter = input.value.toLowerCase();
            const items = input.nextElementSibling.querySelectorAll('.dropdown-item');
            let hasVisibleItems = false;
            items.forEach(item => {
                const text = item.textContent || item.innerText;
                const match = text.toLowerCase().includes(filter);
                item.style.display = match ? '' : 'none';
                if (match) hasVisibleItems = true;
            });

            const dropdownMenu = input.nextElementSibling;
            dropdownMenu.classList.toggle('show', hasVisibleItems);
        }

        $(document).on('click', function (e) {
            const target = $(e.target);
            if (!target.closest('.dropdown').length) {
                $('.dropdown-menu').removeClass('show');
            }
        });

        document.querySelectorAll('.dropdown-menu').forEach(menu => {
            menu.addEventListener('click', (e) => {
                if (e.target.classList.contains('dropdown-item')) {
                    const input = e.target.closest('.dropdown').querySelector('.dropdown-toggle');
                    input.value = e.target.textContent;
                    menu.classList.remove('show');
                }
            });
        });
    </script>
}

