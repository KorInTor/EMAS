@model Model.Equipment
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Model

@*TODO: Hideous trash, rework this. *@
<style>
    .dropdown-menu {
        max-height: 200px;/
        overflow-y: auto;
    }
</style>

<form method="post" class="container mt-4">
    <div class="form-group mb-3">
        <label for="Type">Тип</label>
        <div class="dropdown">
            <input type="text" class="form-control dropdown-toggle" id="Type" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" oninput="filterOptions(this)" asp-for="Type">
            <div class="dropdown-menu overflow-auto" aria-labelledby="combobox">
                @foreach (string name in ViewBag.DistinctValues[nameof(Equipment.Type)])
                {
                    <a class="dropdown-item" href="#">@name</a>
                }
            </div>
        </div>
    </div>
    <div class="form-group mb-3">
        <label for="combobox">Марка</label>
        <div class="dropdown">
            <input type="text" class="form-control dropdown-toggle" id="combobox" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" oninput="filterOptions(this)" asp-for="Name">
            <div class="dropdown-menu overflow-auto" aria-labelledby="combobox">
                @foreach (string name in ViewBag.DistinctValues[nameof(Equipment.Name)])
                {
                    <a class="dropdown-item" href="#">@name</a>
                }
            </div>
        </div>
    </div>
    <div class="form-group mb-3">
        <label for="Units">Единицы Измерения</label>
        <div class="dropdown">
            <input type="text" class="form-control dropdown-toggle" id="Units" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" oninput="filterOptions(this)" asp-for="Units">
            <div class="dropdown-menu overflow-auto" aria-labelledby="combobox">
                @foreach (string name in ViewBag.DistinctValues[nameof(Equipment.Units)])
                {
                    <a class="dropdown-item" href="#">@name</a>
                }
            </div>
        </div>
    </div>
    <div class="form-group mb-3">
        <label asp-for="AccuracyClass">Класс Точности</label>
        <input type="text" class="form-control" asp-for="AccuracyClass" />
        <span asp-validation-for="AccuracyClass" class="text-danger" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Limit">Пределы измерения</label>
        <input type="text" class="form-control" asp-for="Limit" />
        <span asp-validation-for="Limit" class="text-danger" />
    </div>
    <div class="form-group mb-3">
        <label for="manufacturer">Производитель</label>
        <div class="dropdown">
            <input type="text" class="form-control dropdown-toggle" id="manufacturer" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" oninput="filterOptions(this)" asp-for="Manufacturer">
            <div class="dropdown-menu overflow-auto" aria-labelledby="combobox">
                @foreach (string name in ViewBag.DistinctValues[nameof(Equipment.Manufacturer)])
                {
                    <a class="dropdown-item" href="#">@name</a>
                }
            </div>
        </div>
    </div>
    <div class="form-group mb-3">
        <label asp-for="FactoryNumber">Заводской Номер</label>
        <input type="text" class="form-control" asp-for="FactoryNumber" />
        <span asp-validation-for="FactoryNumber" class="text-danger" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="RegistrationNumber">Инвентарный Номер</label>
        <input type="text" class="form-control" asp-for="RegistrationNumber" />
        <span asp-validation-for="RegistrationNumber" class="text-danger" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Status">Статус</label>
        <select class="form-control" asp-for="Status">
            @foreach (KeyValuePair<int, string> status in ViewBag.Statuses)
            {
                <option value="@status.Value">@status.Value</option>
            }
        </select>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Description">Описание</label>
        <input type="text" class="form-control" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger" />
    </div>
    <div class="form-group mb-3">
        <button type="submit" class="btn btn-success form-control">Создать новое оборудование</button>
    </div>
    @if (ViewBag.NoError != null)
    {
        @if (!ViewBag.NoError)
        {
            <div class="alert alert-danger mt-3" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }
        else if (ViewBag.NoError)
        {
            <div class="alert alert-success mt-3" role="alert">
                Добавление успешно
            </div>
        }
    }
</form>

@section Scripts
{
    
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

    <script>
        function filterOptions(input) {
            const filter = input.value.toLowerCase();
            const items = input.nextElementSibling.querySelectorAll('.dropdown-item');
            let hasVisibleItems = false;
            items.forEach(item => {
                const text = item.textContent || item.innerText;
                const match = text.toLowerCase().includes(filter);
                item.style.display = match ? '' : 'none';
                if (match) hasVisibleItems = true;
            });

            const dropdownMenu = input.nextElementSibling;
            dropdownMenu.classList.toggle('show', hasVisibleItems);
        }

        $(document).on('click', function (e) {
            const target = $(e.target);
            if (!target.closest('.dropdown').length) {
                $('.dropdown-menu').removeClass('show');
            }
        });

        document.querySelectorAll('.dropdown-menu').forEach(menu => {
            menu.addEventListener('click', (e) => {
                if (e.target.classList.contains('dropdown-item')) {
                    const input = e.target.closest('.dropdown').querySelector('.dropdown-toggle');
                    input.value = e.target.textContent;
                    menu.classList.remove('show');
                }
            });
        });
    </script>
}
