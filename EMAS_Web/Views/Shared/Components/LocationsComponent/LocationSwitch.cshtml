@model Dictionary<int,string>

<script src="~/js/locationSwitchManager.js"></script>

<button class="btn btn-primary dropdown-toggle" type="button" id="locationSelectorButton" onclick="setDisplayNoneSingle(document.getElementById('locationSelector'),!isElememntHidden(document.getElementById('locationSelector')))">
    Сменить Локацию
</button>

<ul class="list-group list-group-horizontal overflow-x-auto position-absolute bg-light" id="locationSelector" style="z-index: 100; display: none;">
    <li class="p-1" style="list-style-type: none;">
    <input type="radio" class="btn-check" name="locationPicker" id="locationRadio_@(EMAS_Web.Filters.LocationFilter.SpecialLocationId)" autocomplete="off" onclick="updateId(this.value); switchLocationIfPossible(this.value);" value="@(EMAS_Web.Filters.LocationFilter.SpecialLocationId)">
    <label class="btn btn-outline-primary" for="locationRadio_@(EMAS_Web.Filters.LocationFilter.SpecialLocationId)">Все</label>
    </li>
    @foreach (KeyValuePair<int,string> location in Model)
    {
        <li class="p-1" style="list-style-type: none;">
        <input type="radio" class="btn-check" name="locationPicker" id="locationRadio_@(location.Key)" autocomplete="off" onclick="updateId(this.value); switchLocationIfPossible(this.value);" value="@(location.Key)">
        <label class="btn btn-outline-primary" for="locationRadio_@(location.Key)">@location.Value</label>
        </li>
    }
</ul>


<ul class="navbar-nav flex-grow-1">
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark locationLink" asp-controller="StorableObject" asp-action="Index" asp-route-locationId="0">Склад</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark locationLink" asp-controller="Delivery" asp-action="Index" asp-route-locationId="0">Доставки</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark locationLink" asp-controller="Reservation" asp-action="Index" asp-route-locationId="0">Резерв</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark locationLink" asp-controller="Archive" asp-action="Index" asp-route-locationId="0">Архив</a>
    </li>
</ul>

<script>
    initLocationSwitch();
</script>

