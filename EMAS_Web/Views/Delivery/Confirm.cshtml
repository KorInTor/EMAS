@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Model.Event.SentEvent

@foreach (var storableObject in Model.ObjectsInEvent)
{
    <p>@storableObject.ShortInfo</p>
}

<form method="post">
    <div>
        <p>
            <label for="SentEventId">Id</label><br />
            <input type="hidden" value="@Model.Id" disabled />
        </p>
        <p>
            <label for="Comment">Комментарий</label><br />
            <input type="text" name="comment" />
        </p>
        <p>
            <label for="DateTime">Дата прибытия</label><br />
            <input type="datetime-local" name="dateTime" min="@(ViewBag.MinDateTimeString)" min="@(ViewBag.MaxDateTimeString)" />
        </p>
        <p>
            <input class="btn btn-success" type="submit" value="Завершить доставку" />
        </p>
    </div>

    @if (ViewBag.Error != null)
    {
        @if (ViewBag.Error)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }
        else
        {
            <div class="alert alert-success" role="alert">
                Добавление успешно
            </div>
        }
    }
</form>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
