@model List<Model.Event.SentEvent>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>
    <style>
        .fixed-bottom {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #f1f1f1;
            text-align: center;
            padding: 10px;
            box-shadow: 0 -2px 5px rgba(0,0,0,0.1);
        }
    </style>
</head>

<table id="deliveryTable" class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Дата отправки</th>
            <th>Комментарий</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.DateTime</td>
                <td>@item.Comment</td>

                <td>
                    <form asp-controller="Delivery" asp-action="Confirm" method="get">
                        <input type="hidden" name="sentEventId" value="@item.Id" />
                        <button type="submit" class="btn btn-primary">Подтвердить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


