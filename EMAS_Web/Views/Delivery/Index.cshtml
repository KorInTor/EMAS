@model IEnumerable<Model.Event.SentEvent>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewBag.CanConfirm = ViewBag.Incoming && ViewBag.HasPermission;
}

@if (ViewBag.LocationId != EMAS_Web.Filters.LocationFilter.SpecialLocationId)
{
    <div class="btn-group" role="group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            @if (ViewBag.Outgoing)
            {
                <span>Исходящие</span>
            }
            @if (ViewBag.Incoming)
            {
                <span>Входящие</span>
            }
        </button>
        <ul class="dropdown-menu">
            @if (ViewBag.Incoming)
            {
                <li><a asp-controller="Delivery" asp-action="Index" asp-route-selectOutgoing="true" asp-route-locationId="@ViewBag.LocationId" class="btn btn-primary">Выбрать Исходящие</a></li>
            }
            @if (ViewBag.Outgoing)
            {
                <li><a asp-controller="Delivery" asp-action="Index" asp-route-selectOutgoing="false" asp-route-locationId="@ViewBag.LocationId" class="btn btn-primary">Выбрать Входящие</a></li>
            }
        </ul>
    </div>
}

<table id="deliveryTable" class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Дата отправки</th>
            <th>Комментарий</th>
            @if (ViewBag.Outgoing)
            {
                <th>Место Назначения</th>
            }
            @if (ViewBag.Incoming)
            {
                <th>Отправлено Из</th>
            }
            @if (ViewBag.CanConfirm)
            {
                <th></th>
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.DateTime</td>
                <td>@item.Comment</td>
                @if (ViewBag.Outgoing)
                {
                    <td>
                        @ViewBag.LocationDictionary[item.DestinationId]
                    </td>
                }
                @if (ViewBag.Incoming)
                {
                    <td>
                        @ViewBag.LocationDictionary[item.DepartureId]
                    </td>
                }
                @if (ViewBag.CanConfirm)
                {
                    <td>

                        <form asp-controller="Delivery" asp-action="Confirm" method="get">
                            <input type="hidden" name="sentEventId" value="@item.Id" />
                            <button type="submit" class="btn btn-primary">Подтвердить</button>
                        </form>
                    </td>
                }
                <td>
                    <form asp-controller="Archive" asp-action="ObjectsInEvent" method="get">
                        <input type="hidden" name="eventId" value="@item.Id" />
                        <input type="submit" class="btn btn-primary" value="Объекты в доставке" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


