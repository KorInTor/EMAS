@model Model.Event.ReservedEvent

<script src="~/js/TableFilterMenu.js"></script>
<script src="~/js/tableResizer.js"></script>

@await Html.PartialAsync("StorableObjectsTables", Model.ObjectsInEvent)

<form method="post">
    <div>
        <input type="hidden" value="@Model.Id" name="reservedEventId" />
        <p>
            <label for="Comment">Комментарий</label><br />
            <input type="text" name="comment" />
        </p>
        <p>
            <label for="DateTime">Дата и время</label><br />
            <input type="datetime-local" name="dateTime" min="@(ViewBag.MinDateTimeString)" max="@(ViewBag.MaxDateTimeString)" />
        </p>
        <p>
            <label for="isDecomissioned">Завершить как реализованный?</label><br />
            <input type="checkbox" name="isDecomissioned" />
        </p>
        <p>
            <input class="btn btn-success" type="submit" value="Завершить" />
        </p>
    </div>
</form>