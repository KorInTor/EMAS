@model IEnumerable<Model.Event.ReservedEvent>

<head>
    <style>
        .fixed-bottom {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #f1f1f1;
            text-align: center;
            padding: 10px;
            box-shadow: 0 -2px 5px rgba(0,0,0,0.1);
        }
    </style>
</head>

<table id="reservationTable" class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Дата начала</th>
            <th>Комментарий</th>
            @if (ViewBag.HasPermission)
            {
                <th></th>
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.DateTime</td>
                <td>@item.Comment</td>
                @if (ViewBag.HasPermission)
                {
                    <td>
                        <form asp-controller="Reservation" asp-action="Confirm" method="get">
                            <input type="hidden" name="reservedEventId" value="@item.Id" />
                            <button type="submit" class="btn btn-primary">Закончить</button>
                        </form>
                    </td>
                }
                <td>
                    <form asp-controller="Archive" asp-action="ObjectsInEvent" method="get">
                        <input type="hidden" name="eventId" value="@item.Id" />
                        <input type="submit" class="btn btn-primary" value="Объекты в резерве" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>