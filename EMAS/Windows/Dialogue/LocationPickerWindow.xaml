<Window x:Class="EMAS.Windows.Dialogue.LocationPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EMAS.Windows.Dialogue"
        xmlns:controls="clr-namespace:EMAS.Controls" 
        xmlns:viewmodel="clr-namespace:EMAS.ViewModel" 
        d:DataContext="{d:DesignInstance Type=viewmodel:LocationPickerVM}"
        mc:Ignorable="d"
        Title="{Binding WindowHeaderText}" Height="auto" Width="auto" DataContext="{Binding DataContext, ElementName=LocationControl}">
    <Grid>
        <controls:LocationPickerControl x:Name="LocationControl"/>
    </Grid>
</Window>
