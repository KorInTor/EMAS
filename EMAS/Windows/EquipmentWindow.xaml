<Window x:Class="EMAS.Windows.EquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EMAS.Windows"
        xmlns:controlls="clr-namespace:EMAS.Controls"
        xmlns:viewmodel="clr-namespace:EMAS.ViewModel"
        mc:Ignorable="d"
        Title="EquipmentWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewmodel:EquipmentVM/>
    </Window.DataContext>
    <Grid>
        <TabControl x:Name="MainTabControl" SelectedItem="{Binding CurrentLocation}" ItemsSource="{Binding Locations}" DisplayMemberPath="Name">
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <controlls:EquipmentControl DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:EquipmentWindow}}}"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</Window>
