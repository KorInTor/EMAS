<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:EMAS_WPF.Converters">
    <converters:DataGridColoredRowConverter x:Key="ColorConverter"/>
    <Style x:Key="AlternatingRowStyle" TargetType="DataGridRow">
        <Setter Property="Background" Value="{Binding Path=(ItemsControl.AlternationIndex), RelativeSource={RelativeSource Self}, Converter={StaticResource ColorConverter}}"/>
    </Style>
</ResourceDictionary>
