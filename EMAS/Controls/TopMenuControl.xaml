<UserControl x:Class="WPFView.Controls.TopMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFView.Controls"
             xmlns:properties="clr-namespace:EMAS.Properties"
             xmlns:viewmodel="clr-namespace:WPFViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <d:UserControl.DataContext>
        <viewmodel:TopMenuVM/>
    </d:UserControl.DataContext>
    <Grid>
        <Menu Grid.Row="0" Height="auto" VerticalAlignment="Top">
            <MenuItem Header="Синхронизировать" Command="{Binding SynchronizeDataCommand}" Height="30">
                <MenuItem.Icon>
                    <Image Source="{Binding Source={x:Static properties:Resources.synchronizeIcon}}" Width="auto" Height="auto"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Окна" >
                <MenuItem Header="Окно администрации" Command="{Binding OpenAdminMenuCommand, Mode=OneWay}"/>
            </MenuItem>
            <MenuItem Header="О программе" Command="{Binding OpenAboutWindowCommand, Mode=OneWay}" />
        </Menu>
    </Grid>
</UserControl>
