<UserControl x:Class="EMAS_WPF.Controls.LocationPickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EMAS_WPF.Controls" xmlns:viewmodel="clr-namespace:ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewmodel:LocationPickerVM/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <ListBox ItemsSource="{Binding LocationList}" SelectedItem="{Binding SelectedLocation}" DisplayMemberPath="Value" Grid.Row="0" Padding="3"/>
        <Button Content="{Binding ConfirmButtonText}" Command="{Binding ConfirmSelectionCommand}" Grid.Row="1" Padding="3"/>
    </Grid>
</UserControl>
