<UserControl x:Class="EMAS.View.Controls.Delivery.DeliveryConfirmationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EMAS.View.Controls.Delivery"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label Content="Выберите дату приыбтия"/>
            <DatePicker SelectedDate="{Binding ArriveDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="Дополнительный коментарий"/>
            <TextBox Text="{Binding ArriveComment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Подтвердить" Command="{Binding MakeDeliveryCompletedCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
